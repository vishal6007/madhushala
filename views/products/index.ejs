<%- include("../partials/header")%>
<%- include("../partials/navbar")%>


<main class="container" style="margin-top: 5rem;">
    
    <%- include("../partials/flash")%>


     <section id="heading" style="background-color: #e0b76b9d;"> 

      <!-- <h4 class="display-4"><i class="fab fa-shopify" style="margin-right: 20px;"></i>Shopping-Cart</h4> -->
      <div style="display: inline-block;"><img src="/assets/111.jpg" style="width: 130px; border-radius: 10px;" alt=""> <h6 style="font-size: larger; color: #f7f582;">Just a CLICK away...</h6></div>

    </section>
   
    <div class="row products">

        <%for(let product of products){%>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card" >
                <img src="<%= product.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><%= product.desc.substring(0,50) %></p>
                  <a href="/products/<%= product._id %>" class="btn btn-outline-primary">View Product</a>
                </div>
            </div>
          </div>
        <%}%>
     
    </div>




</div>
</main>

    
